<!-- views/partials/toast.ejs -->
<% if (locals.toast) { %>
<div
  id="toast-notification"
  class="fixed top-4 right-4 z-50 max-w-[500px] w-fit rounded shadow-lg <%= toast.type === 'error' ? 'bg-red-100 border-l-4 border-red-500 text-red-700' : 'bg-green-100 border-l-4 border-green-500 text-green-700' %> transition-opacity duration-500 opacity-100 overflow-hidden"
  data-toast="true"
>
  <!-- Main content -->
  <div class="flex items-center p-2 relative">
    <div class="mr-2">
      <% if (toast.type === 'error') { %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
          clip-rule="evenodd"
        ></path>
      </svg>
      <% } else { %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd"
        ></path>
      </svg>
      <% } %>
    </div>
    <div class="flex-grow">
      <p class="font-medium"><%= toast.message %></p>
    </div>
    <div class="ml-3 flex items-center justify-center">
      <button
        type="button"
        class="toast-close-btn text-gray-500 hover:text-gray-700 cursor-pointer"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          ></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Progress bar -->
  <div class="h-1 bg-white bg-opacity-30 relative">
    <div
      id="toast-progress"
      class="h-full <%= toast.type === 'error' ? 'bg-red-600' : 'bg-green-600' %> transition-all duration-100 ease-linear"
      style="width: 100%"
    ></div>
  </div>
</div>
<% } %>

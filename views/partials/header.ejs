<header class="bg-white shadow-sm border-b border-gray-200 h-16 fixed top-0 right-0 left-64 z-20">
    <div class="h-full px-6 flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <div class="relative">
                <i class="fas fa-search text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
                <input
                    type="text"
                    placeholder="Search..."
                    class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-80"
                />
            </div>
        </div>

        <div class="flex items-center space-x-4">
            <button class="p-2 text-gray-400 hover:text-gray-600 relative">
                <i class="fas fa-bell text-lg"></i>
                <span class="absolute top-0 right-0 h-2 w-2 bg-red-500 rounded-full"></span>
            </button>

            <div class="flex items-center space-x-3">
                <div class="text-right">
                    <p class="text-sm font-medium text-gray-900"><%= admin.name %></p>
                    <p class="text-xs text-gray-500 capitalize"><%= admin.role.replace('_', ' ') %></p>
                </div>
                <div class="relative">
                    <img
                        src="<%= admin.avatar %>"
                        alt="<%= admin.name %>"
                        class="h-8 w-8 rounded-full"
                    />
                </div>
            </div>

            <form action="/admin/logout" method="POST" class="inline">
                <button
                    type="submit"
                    class="p-2 text-gray-400 hover:text-red-600 transition-colors duration-200"
                    title="Logout"
                    onclick="return confirm('Are you sure you want to logout?')"
                >
                    <i class="fas fa-sign-out-alt text-lg"></i>
                </button>
            </form>
        </div>
    </div>
</header>
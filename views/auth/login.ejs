<div
  class="flex min-h-[80vh] sm:min-h-screen w-screen flex-col items-center justify-center sm:bg-gray-50 p-4"
>
  <div
    class="w-full max-w-md rounded-none shadow-none border-none sm:rounded sm:shadow-lg bg-white"
  >
    <div class="text-center p-6">
      <img
        src="/images/logo.png"
        alt="Gurudwara Logo"
        class="mx-auto mb-2 h-16 w-16 rounded-full"
      />
      <h2 class="text-2xl font-semibold">Welcome Back</h2>
      <p class="text-gray-600">Please login in to continue</p>
    </div>

    <div class="p-6 pt-0">
      <form
        id="login-form"
        action="/admin/auth/login"
        method="POST"
        class="space-y-4"
      >
        <input
          id="email"
          name="email"
          type="email"
          placeholder="Email ID"
          required
          class="w-full px-3 py-2 mt-1 rounded border border-gray-300 shadow-none focus:outline-none"
        />

        <div class="relative">
          <input
            id="password"
            name="password"
            type="password"
            placeholder="Password"
            required
            class="password-field w-full px-3 py-2 mt-1 rounded border border-gray-300 pr-10 shadow-none focus:outline-none"
          />
          <button
            type="button"
            class="password-toggle absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 cursor-pointer"
          >
            <i class="fa-solid fa-eye"></i>
          </button>
        </div>

        <div class="flex items-center">
          <input
            type="checkbox"
            id="rememberMe"
            name="rememberMe"
            class="mr-2 h-4 w-4 accent-primaryRed border-gray-300 rounded"
          />
          <label for="rememberMe" class="text-sm text-gray-700"
            >Remember me</label
          >
        </div>
        <button
          type="submit"
          id="loginSubmitBtn"
          class="cursor-pointer w-full py-2 bg-primaryRed text-white rounded hover:bg-primaryRed/90"
        >
          Login
        </button>
      </form>
    </div>
  </div>
</div>

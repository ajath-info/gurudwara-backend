<div class="space-y-6 p-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Gurudwaras</h1>
      <p class="text-gray-600">Manage all registered gurudwaras</p>
    </div>
    <% if (admin.role === 'super_admin') { %>
    <a href="/admin/gurudwaras/create" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center space-x-2">
      <i class="fas fa-plus h-4 w-4"></i>
      <span>Add Gurudwara</span>
    </a>
    <% } %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
      <form method="GET" action="/admin/gurudwaras" class="flex items-center justify-between space-x-4">
        <div class="flex items-center space-x-4 flex-1">
          <div class="relative">
            <i class="fas fa-search h-5 w-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
            <input
              type="text"
              name="search"
              placeholder="Search gurudwaras..."
              value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
              class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-80"
            />
          </div>
          <select
            name="status"
            class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          >
            <option value="all" <%= (typeof statusFilter !== 'undefined' && statusFilter === 'all') ? 'selected' : '' %>>All Status</option>
            <option value="1" <%= (typeof statusFilter !== 'undefined' && statusFilter === '1') ? 'selected' : '' %>>Active</option>
            <option value="2" <%= (typeof statusFilter !== 'undefined' && statusFilter === '2') ? 'selected' : '' %>>Inactive</option>
          </select>
        </div>
        <button type="submit" class="flex items-center space-x-2 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
          <i class="fas fa-filter h-4 w-4"></i>
          <span>Filter</span>
        </button>
      </form>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
      <% if (gurudwaras && gurudwaras.length > 0) { %>
        <% gurudwaras.forEach(gurudwara => { %>
          <% 
            // Determine image source
            let imageSrc = '/images/default-gurudwara.jpg';
            if (gurudwara.image_urls && Array.isArray(gurudwara.image_urls) && gurudwara.image_urls.length > 0) {
              imageSrc = gurudwara.image_urls[0];
            }
          %>
          <div class="bg-white border border-gray-200 rounded-lg overflowing-hidden hover:shadow-md transition-shadow duration-200">
            <div class="aspect-w-16 aspect-h-9">
              <img
                src="<%= imageSrc %>"
                alt="<%= gurudwara.name %>"
                class="w-full h-48 object-cover"
                onerror="this.src='/images/default-gurudwara.jpg'"
              />
            </div>
            <div class="p-4">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-semibold text-gray-900"><%= gurudwara.name %></h3>
                <% if (gurudwara.status === '1') { %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Active
                  </span>
                <% } else { %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Inactive
                  </span>
                <% } %>
              </div>
              <div class="flex items-center text-sm text-gray-600 mb-3">
                <i class="fas fa-map-marker-alt h-4 w-4 mr-1"></i>
                <span><%= gurudwara.address %></span>
              </div>
              <div class="flex items-center justify-between">
                <div class="text-xs text-gray-500">
                  Added <%= new Date(gurudwara.created_at).toLocaleDateString() %>
                </div>
                <div class="flex items-center space-x-2">
                  <a
                    href="/admin/gurudwaras/<%= gurudwara.id %>"
                    class="text-blue-600 hover:text-blue-900"
                    title="View Details"
                  >
                    <i class="fas fa-eye h-4 w-4"></i>
                  </a>
                  <% if (admin.role === 'super_admin') { %>
                    <a
                      href="/admin/gurudwaras/<%= gurudwara.id %>/edit"
                      class="text-indigo-600 hover:text-indigo-900"
                      title="Edit"
                    >
                      <i class="fas fa-edit h-4 w-4"></i>
                    </a>
                  <% } %>
                  <a
                    href="/admin/gurudwaras/<%= gurudwara.id %>/qr"
                    class="text-green-600 hover:text-green-900"
                    title="View QR Code"
                  >
                    <i class="fas fa-qrcode h-4 w-4"></i>
                  </a>
                  <% if (admin.role === 'super_admin') { %>
                    <% if (gurudwara.status === '1') { %>
                      <form
                        method="POST"
                        action="/admin/gurudwaras/<%= gurudwara.id %>/delete"
                        class="inline"
                        onsubmit="return confirm('Are you sure you want to delete this gurudwara? It will be marked as inactive.')"
                      >
                        <button
                          type="submit"
                          class="text-red-600 hover:text-red-900"
                          title="Delete"
                        >
                          <i class="fas fa-trash h-4 w-4"></i>
                        </button>
                      </form>
                    <% } else { %>
                      <form
                        method="POST"
                        action="/admin/gurudwaras/<%= gurudwara.id %>/restore"
                        class="inline"
                        onsubmit="return confirm('Are you sure you want to restore this gurudwara?')"
                      >
                        <button
                          type="submit"
                          class="text-orange-600 hover:text-orange-900"
                          title="Restore"
                        >
                          <i class="fas fa-undo h-4 w-4"></i>
                        </button>
                      </form>
                    <% } %>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-span-full text-center py-12">
          <div class="text-gray-500">
            <i class="fas fa-search text-4xl mb-4"></i>
            <p class="text-lg">No gurudwaras found</p>
            <p class="text-sm">Try adjusting your search or filter criteria</p>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Pagination -->
    <% if (pagination && pagination.totalPages > 1) { %>
    <div class="px-6 py-4 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-700">
          Showing <%= pagination.startIndex %> to <%= pagination.endIndex %> of <%= pagination.totalItems %> gurudwaras
        </div>
        <div class="flex items-center space-x-2">
          <% if (pagination.currentPage > 1) { %>
            <a href="?page=<%= pagination.currentPage - 1 %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + searchTerm : '' %><%= typeof statusFilter !== 'undefined' && statusFilter !== 'all' ? '&status=' + statusFilter : '' %>"
               class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-50">Previous</a>
          <% } else { %>
            <button class="px-3 py-1 border border-gray-300 rounded bg-gray-100 text-gray-400 cursor-not-allowed" disabled>Previous</button>
          <% } %>

          <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
            <% if (i === pagination.currentPage) { %>
              <button class="px-3 py-1 bg-blue-600 text-white rounded"><%= i %></button>
            <% } else { %>
              <a href="?page=<%= i %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + searchTerm : '' %><%= typeof statusFilter !== 'undefined' && statusFilter !== 'all' ? '&status=' + statusFilter : '' %>"
                 class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-50"><%= i %></a>
            <% } %>
          <% } %>

          <% if (pagination.currentPage < pagination.totalPages) { %>
            <a href="?page=<%= pagination.currentPage + 1 %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + searchTerm : '' %><%= typeof statusFilter !== 'undefined' && statusFilter !== 'all' ? '&status=' + statusFilter : '' %>"
               class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-50">Next</a>
          <% } else { %>
            <button class="px-3 py-1 border border-gray-300 rounded bg-gray-100 text-gray-400 cursor-not-allowed" disabled>Next</button>
          <% } %>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<!-- View Details Modal -->
<div id="viewModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
  <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-2xl shadow-lg rounded-md bg-white">
    <div class="flex items-center justify-between pb-3 border-b">
      <h3 class="text-lg font-semibold">Gurudwara Details</h3>
      <button onclick="closeModal('viewModal')" class="text-gray-400 hover:text-gray-600">
        <i class="fas fa-times h-6 w-6"></i>
      </button>
    </div>
    <div id="modalContent" class="mt-4">
      <!-- Dynamic content will be loaded here -->
    </div>
  </div>
</div>

<!-- QR Code Modal -->
<div id="qrModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="flex items-center justify-between pb-3 border-b">
      <h3 class="text-lg font-semibold" id="qrModalTitle">QR Code</h3>
      <button onclick="closeModal('qrModal')" class="text-gray-400 hover:text-gray-600">
        <i class="fas fa-times h-6 w-6"></i>
      </button>
    </div>
    <div class="mt-4 text-center">
      <img id="qrCodeImage" src="" alt="QR Code" class="w-48 h-48 mx-auto border border-gray-200 rounded-lg" />
      <button onclick="downloadQR()" class="mt-4 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
        <i class="fas fa-download mr-2"></i>Download QR
      </button>
    </div>
  </div>
</div>

<script>
  function viewGurudwara(id) {
    fetch(`/admin/gurudwaras/${id}/details`)
      .then(response => response.json())
      .then(data => {
        const modalContent = document.getElementById('modalContent');
        modalContent.innerHTML = `
          <div class="space-y-4">
            <div class="aspect-w-16 aspect-h-9">
              <img
                src="${data.image_urls && Array.isArray(data.image_urls) && data.image_urls.length > 0 ? data.image_urls[0] : '/images/default-gurudwara.jpg'}"
                alt="${data.name}"
                class="w-full h-64 object-cover rounded-lg"
                onerror="this.src='/images/default-gurudwara.jpg'"
              />
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">${data.name}</h3>
              <div class="flex items-center text-gray-600 mb-4">
                <i class="fas fa-map-marker-alt h-5 w-5 mr-2"></i>
                <span>${data.address}</span>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">Latitude</label>
                <p class="mt-1 text-sm text-gray-900">${data.latitude || 'N/A'}</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Longitude</label>
                <p class="mt-1 text-sm text-gray-900">${data.longitude || 'N/A'}</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Status</label>
                <div class="mt-1">
                  ${data.status === '1' ?
                    '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>' :
                    '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Inactive</span>'
                  }
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Added</label>
                <p class="mt-1 text-sm text-gray-900">${new Date(data.created_at).toLocaleDateString()}</p>
              </div>
            </div>
          </div>
        `;
        showModal('viewModal');
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error loading gurudwara details');
      });
  }

  function viewQRCode(qrUrl, name) {
    document.getElementById('qrModalTitle').textContent = `QR Code - ${name}`;
    document.getElementById('qrCodeImage').src = qrUrl;
    showModal('qrModal');
  }

  function downloadQR() {
    const qrImage = document.getElementById('qrCodeImage');
    const link = document.createElement('a');
    link.href = qrImage.src;
    link.download = 'qr-code.png';
    link.click();
  }

  function showModal(modalId) {
    document.getElementById(modalId).classList.remove('hidden');
  }

  function closeModal(modalId) {
    document.getElementById(modalId).classList.add('hidden');
  }

  // Close modal when clicking outside
  window.onclick = function(event) {
    const viewModal = document.getElementById('viewModal');
    const qrModal = document.getElementById('qrModal');
    if (event.target === viewModal) {
      closeModal('viewModal');
    }
    if (event.target === qrModal) {
      closeModal('qrModal');
    }
  }
</script>
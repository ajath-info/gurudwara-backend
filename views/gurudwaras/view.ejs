<div class="space-y-6 p-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Gurudwara Details</h1>
      <p class="text-gray-600">View gurudwara information</p>
    </div>
    <div class="flex items-center space-x-3">
      <a
        href="/admin/gurudwaras"
        class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200"
      >
        <i class="fas fa-arrow-left mr-2"></i>Back to Gurudwaras
      </a>
      <% if (admin.role === 'super_admin') { %>
      <a
        href="/admin/gurudwaras/<%= gurudwara.id %>/edit"
        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200"
      >
        <i class="fas fa-edit mr-2"></i>Edit Gurudwara
      </a>
      <% } %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="p-6">
      <div class="space-y-6">
        <div class="flex items-center space-x-6">
          <img
            class="h-24 w-24 rounded-lg object-cover"
            src="<%= gurudwara.image_urls && Array.isArray(gurudwara.image_urls) && gurudwara.image_urls.length > 0 ? gurudwara.image_urls[0] : '/images/default-gurudwara.jpg' %>"
            alt="<%= gurudwara.name %>"
            onerror="this.src='/images/default-gurudwara.jpg'"
          />
          <div>
            <h2 class="text-2xl font-bold text-gray-900">
              <%= gurudwara.name %>
            </h2>
            <p class="text-gray-500">Gurudwara ID: <%= gurudwara.id %></p>
            <div class="mt-2">
              <% if (gurudwara.status === '1') { %>
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800"
              >
                <i class="fas fa-check-circle mr-1"></i>Active
              </span>
              <% } else { %>
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800"
              >
                <i class="fas fa-times-circle mr-1"></i>Inactive
              </span>
              <% } %>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-gray-50 p-4 rounded-lg">
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Address</label
            >
            <div class="flex items-center">
              <i class="fas fa-map-marker-alt text-gray-400 mr-2"></i>
              <span class="text-lg text-gray-900"
                ><%= gurudwara.address %></span
              >
            </div>
          </div>

          <div class="bg-gray-50 p-4 rounded-lg">
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Latitude</label
            >
            <div class="flex items-center">
              <i class="fas fa-map-pin text-gray-400 mr-2"></i>
              <span class="text-lg text-gray-900"
                ><%= gurudwara.latitude || 'N/A' %></span
              >
            </div>
          </div>

          <div class="bg-gray-50 p-4 rounded-lg">
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Longitude</label
            >
            <div class="flex items-center">
              <i class="fas fa-map-pin text-gray-400 mr-2"></i>
              <span class="text-lg text-gray-900"
                ><%= gurudwara.longitude || 'N/A' %></span
              >
            </div>
          </div>

          <div class="bg-gray-50 p-4 rounded-lg">
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >QR Scan Points</label
            >
            <div class="flex items-center">
              <i class="fas fa-star text-gray-400 mr-2"></i>
              <span class="text-lg text-gray-900"
                ><%= gurudwara.qr_scan_points || '10' %></span
              >
            </div>
          </div>

          <div class="bg-gray-50 p-4 rounded-lg">
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Created At</label
            >
            <div class="flex items-center">
              <i class="fas fa-calendar text-gray-400 mr-2"></i>
              <span class="text-lg text-gray-900"
                ><%= new Date(gurudwara.created_at).toLocaleDateString()
                %></span
              >
            </div>
          </div>

          <div class="bg-gray-50 p-4 rounded-lg">
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >QR Code</label
            >
            <div class="flex items-center">
              <i class="fas fa-qrcode text-gray-400 mr-2"></i>
              <a
                href="/admin/gurudwaras/<%= gurudwara.id %>/qr"
                class="text-blue-600 hover:text-blue-900"
                >View QR Code</a
              >
            </div>
          </div>
        </div>

        <% if (admin.role === 'super_admin') { %>
        <div class="border-t pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Admin Actions</h3>
          <div class="flex items-center space-x-4">
            <a
              href="/admin/gurudwaras/<%= gurudwara.id %>/edit"
              class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200"
            >
              <i class="fas fa-edit mr-2"></i>Edit Gurudwara
            </a>
            <% if (gurudwara.status === '1') { %>
            <form
              method="POST"
              action="/admin/gurudwaras/<%= gurudwara.id %>/delete"
              class="inline"
              onsubmit="return confirm('Are you sure you want to delete this gurudwara? It will be marked as inactive.')"
            >
              <button
                type="submit"
                class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200"
              >
                <i class="fas fa-trash mr-2"></i>Delete Gurudwara
              </button>
            </form>
            <% } else { %>
            <form
              method="POST"
              action="/admin/gurudwaras/<%= gurudwara.id %>/restore"
              class="inline"
              onsubmit="return confirm('Are you sure you want to restore this gurudwara?')"
            >
              <button
                type="submit"
                class="bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-700 transition-colors duration-200"
              >
                <i class="fas fa-undo mr-2"></i>Restore Gurudwara
              </button>
            </form>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

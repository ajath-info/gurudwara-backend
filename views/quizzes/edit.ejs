
<div class="space-y-6 p-6">
  <h1 class="text-2xl font-bold text-gray-900">Edit Quiz</h1>
  <p class="text-sm text-gray-500">Update quiz details</p>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <form
      method="POST"
      action="/admin/quizzes/<%= quiz.id %>/update"
      class="space-y-6"
    >
      <% if (typeof csrfToken !== 'undefined') { %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <% } %>

      <div>
        <label for="question" class="block text-sm font-medium text-gray-700"
          >Question <span class="text-red-600">*</span></label
        >
        <textarea
          id="question"
          name="question"
          rows="4"
          class="mt-1 block w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          required
        ><%= quiz.question %></textarea>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="option_1" class="block text-sm font-medium text-gray-700"
            >Option 1 <span class="text-red-600">*</span></label
          >
          <input
            type="text"
            id="option_1"
            name="option_1"
            value="<%= quiz.option_1 %>"
            class="mt-1 block w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            required
          />
        </div>
        <div>
          <label for="option_2" class="block text-sm font-medium text-gray-700"
            >Option 2 <span class="text-red-600">*</span></label
          >
          <input
            type="text"
            id="option_2"
            name="option_2"
            value="<%= quiz.option_2 %>"
            class="mt-1 block w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            required
          />
        </div>
        <div>
          <label for="option_3" class="block text-sm font-medium text-gray-700"
            >Option 3 <span class="text-red-600">*</span></label
          >
          <input
            type="text"
            id="option_3"
            name="option_3"
            value="<%= quiz.option_3 %>"
            class="mt-1 block w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            required
          />
        </div>
        <div>
          <label for="option_4" class="block text-sm font-medium text-gray-700"
            >Option 4 <span class="text-red-600">*</span></label
          >
          <input
            type="text"
            id="option_4"
            name="option_4"
            value="<%= quiz.option_4 %>"
            class="mt-1 block w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            required
          />
        </div>
      </div>

      <div>
        <label for="correct_option" class="block text-sm font-medium text-gray-700"
          >Correct Option <span class="text-red-600">*</span></label
        >
        <select
          id="correct_option"
          name="correct_option"
          class="mt-1 block w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          required
        >
          <option value="1" <%= quiz.correct_option === 1 ? 'selected' : '' %>>Option 1</option>
          <option value="2" <%= quiz.correct_option === 2 ? 'selected' : '' %>>Option 2</option>
          <option value="3" <%= quiz.correct_option === 3 ? 'selected' : '' %>>Option 3</option>
          <option value="4" <%= quiz.correct_option === 4 ? 'selected' : '' %>>Option 4</option>
        </select>
      </div>

      <div>
        <label for="points" class="block text-sm font-medium text-gray-700"
          >Points <span class="text-red-600">*</span></label
        >
        <input
          type="number"
          id="points"
          name="points"
          min="1"
          value="<%= quiz.points %>"
          class="mt-1 block w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          required
        />
      </div>

      <div>
        <label for="status" class="block text-sm font-medium text-gray-700"
          >Status <span class="text-red-600">*</span></label
        >
        <select
          id="status"
          name="status"
          class="mt-1 block w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          required
        >
          <option value="1" <%= quiz.status === '1' ? 'selected' : '' %>>Active</option>
          <option value="2" <%= quiz.status === '2' ? 'selected' : '' %>>Inactive</option>
        </select>
      </div>

      <div class="flex justify-end gap-4">
        <a
          href="/admin/quizzes"
          class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors duration-200"
        >
          Cancel
        </a>
        <button
          type="submit"
          class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200"
        >
          Update Quiz
        </button>
      </div>
    </form>
  </div>
</div>